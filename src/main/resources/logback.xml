<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.adamyork.socketgame.socket.GameHandler" level="INFO"/>
    <logger name="com.github.adamyork.socketgame.socket.GameAudioHandler" level="INFO"/>
    <logger name="com.github.adamyork.socketgame.game.Game" level="INFO"/>
    <logger name="com.github.adamyork.socketgame.game.engine.Engine" level="INFO"/>
    <logger name="com.github.adamyork.socketgame.game.engine.Physics" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>