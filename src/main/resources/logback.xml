<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.adamyork.sparrow.web.ScoreHandler" level="WARN"/>
    <logger name="com.github.adamyork.sparrow.socket.GameHandler" level="INFO"/>
    <logger name="com.github.adamyork.sparrow.socket.GameAudioHandler" level="INFO"/>
    <logger name="com.github.adamyork.sparrow.game.Game" level="INFO"/>
    <logger name="com.github.adamyork.sparrow.game.engine.DefaultEngine" level="INFO"/>
    <logger name="com.github.adamyork.sparrow.game.engine.DefaultPhysics" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>